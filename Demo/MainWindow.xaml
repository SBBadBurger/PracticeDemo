<Window x:Class="Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo"
        mc:Ignorable="d"
        Title="Добро пожаловать" Height="400" Width="600" ResizeMode="CanMinimize">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" >
            <TextBlock Text="Логин" TextAlignment="Center"/>
            <TextBox x:Name="LoginTextBox" Margin="0 10"/>
            <TextBlock Text="Пароль" TextAlignment="Center"/>
            <PasswordBox x:Name="PasswordBox" Margin="0 10"/>
            <Button x:Name="AuthButton" Content="Войти" Margin="0 10" Click="AuthButton_Click"/>
            <Button x:Name="GuestButton" Content="Продолжить как Гость" Margin="0 10" Click="GuestButton_Click"/>
        </StackPanel>
        <Image Source="/Resources/logo.png" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="100" Height="100"/>


    </Grid>
</Window>
